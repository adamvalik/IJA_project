        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Circle fx:id="player" fill="DODGERBLUE" radius="37.5" stroke="BLACK" strokeType="INSIDE" />
